<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:padding="@dimen/padding_xl">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/tilEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <!-- Usamos layout_weight para distribuir el espacio -->
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="16dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_account_circle"
            app:tint="@color/white"
            android:layout_marginBottom="32dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido/a"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_display"
            android:fontFamily="sans-serif-medium"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_sm"
            android:text="Inicia Sesion con tus credenciales"
            android:textColor="@color/gray_700"
            android:textSize="@dimen/text_size_lg"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEmail"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:hint="Email"
        app:hintTextColor="@color/gray_600"
        app:boxStrokeColor="@color/gray_400"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="@dimen/corner_radius_sm"
        app:boxCornerRadiusTopEnd="@dimen/corner_radius_sm"
        app:boxCornerRadiusBottomStart="@dimen/corner_radius_sm"
        app:boxCornerRadiusBottomEnd="@dimen/corner_radius_sm"
        app:startIconDrawable="@android:drawable/ic_dialog_email"
        app:startIconTint="@color/gray_600">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_500"
            android:minHeight="@dimen/min_touch_target"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPassword"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tilEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_lg"
        android:hint="Password"
        app:hintTextColor="@color/gray_600"
        app:boxStrokeColor="@color/gray_400"
        app:boxStrokeWidth="1dp"
        app:boxCornerRadiusTopStart="@dimen/corner_radius_sm"
        app:boxCornerRadiusTopEnd="@dimen/corner_radius_sm"
        app:boxCornerRadiusBottomStart="@dimen/corner_radius_sm"
        app:boxCornerRadiusBottomEnd="@dimen/corner_radius_sm"
        app:startIconDrawable="@android:drawable/ic_lock_lock"
        app:startIconTint="@color/gray_600"
        app:endIconMode="password_toggle"
        app:endIconTint="@color/gray_600">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textColorHint="@color/gray_500"
            android:minHeight="@dimen/min_touch_target" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogin"
        style="@style/Widget.App.Button"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="Iniciar sesiÃ³n"
        app:layout_constraintTop_toBottomOf="@id/tilPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="@dimen/corner_radius_sm"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/spacing_xxl" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegister"
        style="@style/Widget.App.Button.Outlined"
        android:layout_width="0dp"
        android:layout_height="@dimen/button_height"
        android:text="Registrarse"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:cornerRadius="@dimen/corner_radius_sm"
        android:backgroundTint="@android:color/transparent"
        android:textColor="@color/black"
        app:strokeColor="@color/gray_400"
        app:strokeWidth="1dp"
        android:layout_marginTop="@dimen/spacing_md" />

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>