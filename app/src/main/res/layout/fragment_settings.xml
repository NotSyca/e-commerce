<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    tools:context=".UI.Fragments.SettingsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp"
            android:paddingHorizontal="@dimen/padding_lg">

            <!-- Header -->
            <TextView
                android:id="@+id/tvAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xxl"
                android:layout_marginBottom="@dimen/spacing_xl"
                android:text="Ajustes"
                android:textColor="@color/black"
                android:textSize="@dimen/text_size_display"
                android:fontFamily="sans-serif-medium"
                android:textStyle="bold" />

            <!-- Card del perfil de usuario -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/elevation_sm"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_xl">

                    <!-- Avatar y nombre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="24dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- Avatar circular -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="@dimen/avatar_size_lg"
                            android:layout_height="@dimen/avatar_size_lg"
                            app:cardBackgroundColor="@color/gray_200"
                            app:cardCornerRadius="@dimen/corner_radius_full"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/tvAvatarInitial"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="U"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_headline"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Nombre y rol -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:maxLines="2"
                                android:text="Nombre Usuario"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size_xl"
                                android:fontFamily="sans-serif-medium"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvRole"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/spacing_xs"
                                android:text="Rol: Usuario"
                                android:textColor="@color/gray_600"
                                android:textSize="@dimen/text_size_sm" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Divisor -->
                    <View
                        style="@style/Divider"
                        android:layout_marginVertical="@dimen/spacing_lg"
                        android:background="@color/gray_200" />

                    <!-- Información de contacto -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="Información de Contacto"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_lg"
                        android:fontFamily="sans-serif-medium"
                        android:textStyle="bold" />

                    <!-- Email -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/text_size_sm"
                            android:layout_marginBottom="@dimen/spacing_xs" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="email@ejemplo.com"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />

                    </LinearLayout>

                    <!-- Teléfono -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Teléfono"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/text_size_sm"
                            android:layout_marginBottom="@dimen/spacing_xs" />

                        <TextView
                            android:id="@+id/tvPhone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No registrado"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />

                    </LinearLayout>

                    <!-- Dirección -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Dirección"
                            android:textColor="@color/gray_600"
                            android:textSize="@dimen/text_size_sm"
                            android:layout_marginBottom="@dimen/spacing_xs" />

                        <TextView
                            android:id="@+id/tvAddress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="No registrada"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de acción -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_md"
                android:backgroundTint="@color/black"
                android:text="Editar Perfil"
                android:textSize="@dimen/text_size_md"
                android:textColor="@color/white"
                app:cornerRadius="@dimen/corner_radius_sm" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                style="@style/Widget.App.Button.Outlined"
                android:layout_width="match_parent"
                android:layout_height="@dimen/button_height"
                android:layout_marginBottom="@dimen/spacing_xl"
                android:backgroundTint="@android:color/transparent"
                android:text="Cerrar Sesión"
                android:textSize="@dimen/text_size_md"
                android:textColor="@color/md_theme_error"
                app:cornerRadius="@dimen/corner_radius_sm"
                app:strokeColor="@color/md_theme_error"
                app:strokeWidth="1dp" />

            <!-- Sección: Ajustes de tu espacio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="Ajustes de tu espacio"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/text_size_sm"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:id="@+id/optionNotifications"
                    style="@style/SettingsOptionStyle"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notificaciones"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_md" />

                    <ImageView
                        android:layout_width="@dimen/icon_size_md"
                        android:layout_height="@dimen/icon_size_md"
                        app:srcCompat="@android:drawable/ic_menu_more"
                        app:tint="@color/gray_600"
                        tools:ignore="ContentDescription" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sección: Seguridad y Privacidad -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="Seguridad y Privacidad"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/text_size_sm"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:divider="@drawable/background_bg"
                    android:showDividers="middle">

                    <!-- Menú desplegable para el Historial -->
                    <LinearLayout
                        android:id="@+id/historyHeader"
                        style="@style/SettingsOptionStyle"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Historial de Búsqueda"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />

                        <ImageView
                            android:id="@+id/arrowIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@android:drawable/arrow_down_float"
                            app:tint="@color/gray_700"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/historyContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone"
                        tools:visibility="visible">
                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="16dp"
                            android:paddingBottom="16dp">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rvSearchHistory"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                tools:itemCount="3"
                                tools:listitem="@layout/item_search_history" />
                            <ProgressBar
                                android:id="@+id/progressBarHistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>

                    <View style="@style/Divider" android:layout_marginHorizontal="@dimen/padding_lg" />

                    <LinearLayout
                        android:id="@+id/optionPrivacy"
                        style="@style/SettingsOptionStyle"
                        android:background="?attr/selectableItemBackground">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Privacidad"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />

                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            app:srcCompat="@android:drawable/ic_menu_more"
                            app:tint="@color/gray_600"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sección: Opciones de Administrador -->
            <TextView
                android:id="@+id/tvAdminSectionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="Opciones de Administrador"
                android:textColor="@color/gray_600"
                android:textSize="@dimen/text_size_sm"
                android:textStyle="bold"
                android:visibility="gone"
                tools:visibility="visible" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/ajustes_admin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_xl"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp"
                app:cardBackgroundColor="@color/white"
                app:strokeColor="@color/gray_300"
                app:strokeWidth="1dp"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/optionAddProduct"
                        style="@style/SettingsOptionStyle"
                        android:background="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Agregar productos"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />
                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            app:srcCompat="@android:drawable/ic_menu_add"
                            app:tint="@color/black"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <View style="@style/Divider" android:layout_marginHorizontal="@dimen/padding_lg" />

                    <LinearLayout
                        android:id="@+id/optionAddCategoria"
                        style="@style/SettingsOptionStyle"
                        android:background="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Agregar Categorias"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />
                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            app:srcCompat="@android:drawable/ic_menu_add"
                            app:tint="@color/black"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <View style="@style/Divider" android:layout_marginHorizontal="@dimen/padding_lg" />

                    <LinearLayout
                        android:id="@+id/optionEditCategoria"
                        style="@style/SettingsOptionStyle"
                        android:background="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Editar/Eliminar Categorias"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />
                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            app:srcCompat="@android:drawable/ic_menu_add"
                            app:tint="@color/black"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <View style="@style/Divider" android:layout_marginHorizontal="@dimen/padding_lg" />

                    <LinearLayout
                        android:id="@+id/optionManageUsers"
                        style="@style/SettingsOptionStyle"
                        android:background="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gestionar Usuarios"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />
                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            app:srcCompat="@android:drawable/ic_menu_manage"
                            app:tint="@color/black"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>

                    <View style="@style/Divider" android:layout_marginHorizontal="@dimen/padding_lg" />

                    <LinearLayout
                        android:id="@+id/optionManageOrders"
                        style="@style/SettingsOptionStyle"
                        android:background="?attr/selectableItemBackground">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Gestionar Ordenes de usuarios"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size_md" />
                        <ImageView
                            android:layout_width="@dimen/icon_size_md"
                            android:layout_height="@dimen/icon_size_md"
                            app:srcCompat="@android:drawable/ic_menu_manage"
                            app:tint="@color/black"
                            tools:ignore="ContentDescription" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>