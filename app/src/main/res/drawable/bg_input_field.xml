<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Focused state -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card"/>
            <corners android:radius="@dimen/corner_radius_sm"/>
            <stroke
                android:width="2dp"
                android:color="@color/md_theme_primary"/>
        </shape>
    </item>

    <!-- Normal state -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/background_card"/>
            <corners android:radius="@dimen/corner_radius_sm"/>
            <stroke
                android:width="1dp"
                android:color="@color/md_theme_outline"/>
        </shape>
    </item>
</selector>
