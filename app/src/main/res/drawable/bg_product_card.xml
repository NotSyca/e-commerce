<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/ripple_light">
    <item>
        <layer-list>
            <!-- Shadow -->
            <item
                android:top="1dp"
                android:right="1dp"
                android:left="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="#08000000"/>
                    <corners android:radius="@dimen/corner_radius_md"/>
                </shape>
            </item>

            <!-- Card background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background_card"/>
                    <corners android:radius="@dimen/corner_radius_md"/>
                    <stroke
                        android:width="1dp"
                        android:color="@color/gray_200"/>
                </shape>
            </item>
        </layer-list>
    </item>
</ripple>
